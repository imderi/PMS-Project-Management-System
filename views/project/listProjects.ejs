<%- include("./partials/header.ejs", {active: "Projects"}) %>

<div class="container">
    <h3>Projects</h3>
    <hr>
    <!-- FILTERS / SEARCH -->
    <div class="card">
        <h5 class="card-header">Filters</h5>
        <div class="card-body">
            <form action="/" method="get">

                <!-- PROJECT ID -->
                <div class="form-group row">
                    <div class="col-sm-3 custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="idcheck">
                        <label class="custom-control-label" for="idcheck" name="idcheck">ID</label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" class="form-control float-right" id="inputString" name="id" placeholder="ID">
                    </div>
                </div>

                <!-- NAME -->
                <div class="form-group row">
                    <div class="col-sm-3 custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="namecheck">
                        <label class="custom-control-label" for="namecheck" name="namecheck">Name</label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputString" name="name" placeholder="Name">
                    </div>
                </div>

                <!-- MEMBER -->
                <div class="form-group row">
                    <div class="col-sm-3 custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="membercheck">
                        <label class="custom-control-label" for="membercheck" name="membercheck">Member</label>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputString" name="member" placeholder="Member">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
            </form>
        </div>
    </div>

    <br>
    <!-- OPTIONS -->
    <div class="card">
        <h5 class="card-header">Options</h5>
        <div class="card-body">
            <form action="" method="post">
                <div class="form-group row">
                    <!-- OPTIONS TITLE -->
                    <label class="col-sm-3">Columns</label>
                    <!-- OPTIONS CHOICES -->
                    <div class="form-group col-sm-2">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="idcolumn">
                            <label class="custom-control-label" for="idcolumn" name="idcolumn">ID</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="namecolumn">
                            <label class="custom-control-label" for="namecolumn" name="namecolumn">Name</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="membercolumn">
                            <label class="custom-control-label" for="membercolumn" name="membercolumn">Members</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Apply</button>
            </form>
        </div>
    </div>

    <br>
    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Members</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index)=>{ %>
                <tr>
                    <td> <a href="/projects/overview/<%= item.projectid %>" class="btn btn-dark">
                            <%= item.projectid %></a>
                    </td>
                    <td> <%= item.projectname %></td>
                    <td> <%= item.fullname %> </td>
                    <td>
                        <a href="/projects/edit/<%= item.projectid %>" class="btn btn-success" id=""><i
                                class="fa fa-edit"></i> Edit</a>
                        <% if (isadmin) { %>
                        <a href="/projects/delete/<%= item.projectid %>" class="btn btn-danger" id=""><i
                                class="fa fa-trash"></i> Delete</a>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <!-- PREVIOUS PAGINATION --> 
                <li class="page-item<%= pagination.page == 1 ? ' disabled' : '' %>"><a class="page-link"
                        href="/projects<%= pagination.url.replace(`page=${pagination.page}`, `page=${parseInt(pagination.page) - 1}`); %>"> <i class="fa fa-backward"></i> </a>
                </li>

                <% for (var i = 1; i <= pagination.pages; i++) { %>
                <li class="page-item<%= i == pagination.page ? ' active' : '' %>">
                    <a class="page-link" href="/projects<%= pagination.url.replace(`page=${pagination.page}`, `page=${i}`); %>"><%= i %></a>
                </li>
                <% } %>

                <!-- NEXT PAGINATION --> 
                <li class="page-item<%= pagination.page == pagination.pages ? ' disabled' : '' %>">
                    <a class="page-link" href="/projects<%= pagination.url.replace(`page=${pagination.page}`, `page=${parseInt(pagination.page) + 1}`); %>"> <i class="fa fa-forward"></i> </a>
                </li>
            </ul>
        </nav>

        <!-- ADD BUTTON -->
        <a href="/projects/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add Project</a>
        </form>
    </div>
</div>

<%- include("./partials/footer.ejs") %>
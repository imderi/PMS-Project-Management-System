<%- include("./partials/header.ejs", {active: "Edit"}) %>

<div class="container">
    <h3>Edit Project</h3>
    <hr>
    <div class="card">
        <div class="card-body">
            <form action="/project/edit/save/<%= project.projectid %>" method="post">
                <!-- PROJECT NAME -->
                <div class="form-group row">
                    <label for="projectname" class="col-sm-2 col-form-label">Project Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="projectname" id="name"
                            value="<%= project.name %>">
                    </div>
                </div>

                <!-- MEMBERS -->
                <div class="form-group row">
                    <label for="member" class="col-sm-2 col-form-label">Members</label>
                    <div class="col-sm-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="member" id="">
                            <label class="form-check-label" for="memberr">Member Satu</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="member" id="">
                            <label class="form-check-label" for="member">Member Dua</label>
                        </div>
                    </div>
                </div>
                <!-- SAVE BUTTON -->
                <button class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer.ejs") %>
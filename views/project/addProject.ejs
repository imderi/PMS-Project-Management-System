<%- include("./partials/header.ejs", {active: "Projects"}) %>
<div class="container-fluid">
  <h3>Add Project</h3>
  <hr />
  <div class="container">
    <div class="card">
      <div class="card-body">
        <!-- FORM ADD PROJECT -->
        <form action="/projects/add-save" method="post">
          
          <!-- PROJECT NAME -->
          <div class="form-group row">
            <label for="projectNameId" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="projectname" id="projectNameId"
                placeholder="Project Name" />
            </div>
          </div>
 
          <!-- MEMBERS -->
          <div class="form-group row">
            <label class="col-sm-2">Member</label>
            <!-- OPTIONS CHOICES -->
            <div class="form-group col-sm-4">
              <% members.forEach((member, index)=>{ %>
              <div class="custom-control custom-checkbox">
                <input class="custom-control-input" type="checkbox" name="member" id="<%= member.userid%>"
                  value="<%= member.userid%>" />
                <label class="custom-control-label"
                  for="<%= member.userid%>"><%= member.firstname + member.lastname %></label>
              </div>
              <% }) %>
            </div>
          </div>
          
          <!-- SAVE BUTTON -->
          <button class="btn btn-primary">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include("./partials/footer.ejs") %>